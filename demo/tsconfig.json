{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.cjs",
    "pages/_app.mjs"  
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
      "@reservoir0x/relay-kit-ui/OnrampWidget": [
        "./node_modules/@reservoir0x/relay-kit-ui/_esm/src/components/widgets/OnrampWidget/index.js"
      ]
    }
}